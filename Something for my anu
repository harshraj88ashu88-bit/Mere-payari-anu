<script>
/* PAGE SWITCH */
function go(n){
  document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
  document.getElementById('page'+n).classList.add('active');
}

/* TYPING EFFECT */
let text=`01. How are you anu?

02. I know ki tum kisi par bharosa nahi karti,
lekin mai chahta hu tum mere upar bharosa karo.

03. Pehli baar tumhe dekha tha to laga
jaise pehle bhi mile ho.

04. Shayad kahi mile ho,
ya bas dil ne pehchan liya.

05. Tum muje kamal ki lagti ho anu.

06. Tum se baat karke mujhe khushi milti hai.

07. Tumhari aankhe, tumhari baatein ‚Äî
sab pasand hai.`;

let i=0;
let typing=document.getElementById("typing");

function type(){
  if(i<text.length){
    typing.innerHTML+=text.charAt(i);
    i++;
    setTimeout(type,40);
  }
}
type();

/* NO BUTTON */
let arr=["NO","Are you sure?","Ek baar soch lo"];
let idx=0;

function moveNo(){
  let n=document.getElementById("no");
  n.style.left=Math.random()*80+"vw";
  n.style.top=Math.random()*80+"vh";
  n.innerText=arr[idx%arr.length];
  idx++;
}

/* FIREWORK FUNCTION */
function fireworks(){
  let x=Math.random()*100+"vw";
  let y=Math.random()*100+"vh";

  for(let i=0;i<30;i++){
    let f=document.createElement("div");
    f.className="firework";
    f.style.left=x;
    f.style.top=y;
    f.style.background=["red","yellow","orange","pink","purple","cyan"]
      [Math.floor(Math.random()*6)];
    f.style.setProperty("--x",(Math.random()*200-100)+"px");
    f.style.setProperty("--y",(Math.random()*200-100)+"px");
    document.body.appendChild(f);
    setTimeout(()=>f.remove(),1200);
  }
}

/* YES CLICK */
function yes(){
  // hearts
  for(let i=0;i<70;i++){
    let h=document.createElement("div");
    h.className="heart";
    h.innerText="‚ù§Ô∏è";
    h.style.left=Math.random()*100+"vw";
    h.style.animationDuration=(2+Math.random()*3)+"s";
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),4000);
  }

  // fireworks
  let fw=setInterval(fireworks,300);
  setTimeout(()=>clearInterval(fw),2000);

  setTimeout(()=>go(3),2500);
}
</script>

